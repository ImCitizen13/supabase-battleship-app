model Player {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  avatar    String   
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  host      Battle?  @relation("host")
  guest     Battle?  @relation("guest")

  @@index([name])
}
